<div class="form">
 <div class="container">
 
<%= form_for(@chooser) do |c| %>
<p>
<%= c.label(:day, "Day of Week") %><br>
<%= c.text_field(:day) %>
</p>
<p>
<%= c.label(:breakfast) %>
