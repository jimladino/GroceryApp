</p>
<p>
<%= c.label(:lunch) %>
<%= c.collection_select(:lunch, Meals.all, :id, :meal_name, :include_blank => "Please select") %>
</p>
<p>
<%= c.label(:supper) %>
<%= c.collection_select(:supper, Meals.all, :id, :meal_name, :include_blank => "Please select") %>
</p>
<p>
 <%= c.submit "Save Changes" %> <button type="submit" formaction="javascript:history.go(-1);">Cancel</button>
</p>
 <% end %>  
